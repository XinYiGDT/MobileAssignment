<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenu"
    tools:context="week5.a165036r.com.week5.MainMenu">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView"/>


    <Button
        android:id="@+id/btn_start"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/btn01"
        android:layout_marginTop="152dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_instruction"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/btn02"
        android:layout_marginTop="48dp"
        android:layout_alignTop="@+id/btn_start"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_ranking"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/btn03"
        android:layout_below="@+id/btn_instruction"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
