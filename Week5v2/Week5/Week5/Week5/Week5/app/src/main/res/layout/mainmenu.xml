<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenu"
    tools:context="week5.a165036r.com.week5.MainMenu">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/score"/>


    <Button
        android:id="@+id/btn_start"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/btn01"
        android:layout_marginTop="152dp"
        android:layout_below="@+id/score"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_instruction"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/btn02"
        android:layout_marginTop="48dp"
        android:layout_alignTop="@+id/btn_start"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_ranking"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:background="@drawable/btn03"
        android:layout_below="@+id/btn_instruction"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_bright"
        android:fontFamily="casual"
        android:text="Sling-a-Trash"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="50sp"
        android:textStyle="bold"
        android:visibility="visible" />

</RelativeLayout>
